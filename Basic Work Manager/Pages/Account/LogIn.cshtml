@page
@model BasicWorkManager.Pages.Account.LogInModel
@{
    ViewData["Title"] = "Log In";
}

<div class="container bg-light p-4 rounded shadow-lg"
    style="max-width: 600px">
    <form method="post">
        <h2 class="text-center mb-4">Basic Work Manager</h2>
        <div class="mb-2">
            <div class="input-group">
                <span class="input-group-text"><i class="bi bi-person"></i></span>
                <input id="userInput" class="form-control" placeholder="@Model.localizer.GetString("UsernameOrEmail", Model)" asp-for="Credentials.UsernameOrEmail" required />
            </div>
            <div id="error" class="errorText mt-1">@Model.ErrorMessage</div>
        </div>
        <div class="mt-2">
            <div class="input-group">
                <span class="input-group-text"><i class="bi bi-lock"></i></span>
                <input id="passwordInput" class="form-control" placeholder="@Model.localizer.GetString("Password", Model)" asp-for="Credentials.Password" required />
            </div>
            <div class="mt-1 d-flex flex-row justify-content-between">
                <div>
                    <input class="form-check-input" asp-for="Credentials.StaySignedIn" />
                    <label class="form-check-label">@Model.localizer.GetString("SignedInCheck", Model)</label>
                </div>
                <div class="d-flex flex-column">
                    <a class="btn btn-link p-0 ms-auto me-1" asp-page="/Account/RequestNewPassword">@Model.localizer.GetString("PasswordRequest", Model)</a>
                    <a class="btn btn-link p-0 ms-auto me-1" asp-page="/Account/Register">@Model.localizer.GetString("AccountRequest", Model)</a>
                </div>
            </div>
        </div>
        <button type="submit" class="btn btn-primary">@Model.localizer.GetString("LogInButton", Model)</button>
    </form>
</div>

